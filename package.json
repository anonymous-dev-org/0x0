{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "0x0",
  "description": "AI-powered development tool",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.8",
  "scripts": {
    "dev": "bun run --cwd packages/tui --conditions=browser src/index.ts",
    "dev:tui": "bun run --cwd packages/tui dev",
    "dev:server": "bun run --cwd packages/server dev",
    "build:server": "bun run --cwd packages/server build",
    "build:tui": "bun run --cwd packages/tui build",
    "build:git": "bun run --cwd packages/git build",
    "build:sdk": "bun run --cwd packages/sdk/js build",
    "test:server": "bun run --cwd packages/server test",
    "test:tui": "bun run --cwd packages/tui test",
    "pre-release:checks": "bun run --cwd packages/server typecheck && bun --cwd packages/server test test/session/system.test.ts",
    "pre-release:tui": "ZEROXZERO_CONFIG_CONTENT='{}' bun run --cwd packages/tui --conditions=browser src/index.ts",
    "release": "bash ./script/release-local.sh",
    "typecheck": "bun turbo typecheck",
    "prepare": "husky",
    "test": "echo 'do not run tests from root' && exit 1"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/sdk/js"
    ],
    "catalog": {
      "@types/bun": "1.3.8",
      "@types/node": "22.13.9",
      "@types/semver": "7.7.1",
      "@tsconfig/bun": "1.0.9",
      "@tsconfig/node22": "22.0.2",
      "@typescript/native-preview": "7.0.0-dev.20251207.1",
      "@octokit/rest": "22.0.0",
      "ai": "5.0.124",
      "diff": "8.0.2",
      "hono": "4.10.7",
      "hono-openapi": "1.1.2",
      "remeda": "2.26.0",
      "solid-js": "1.9.10",
      "typescript": "5.8.2",
      "ulid": "3.0.1",
      "zod": "4.1.8"
    }
  },
  "devDependencies": {
    "@tsconfig/bun": "catalog:",
    "husky": "9.1.7",
    "semver": "^7.6.0",
    "turbo": "2.5.6"
  },
  "dependencies": {
    "@anonymous-dev/0x0-script": "workspace:*",
    "@anonymous-dev/0x0-sdk": "workspace:*",
    "typescript": "catalog:"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anonymous-dev-org/0x0"
  },
  "license": "MIT",
  "trustedDependencies": [
    "esbuild",
    "protobufjs",
    "tree-sitter",
    "tree-sitter-bash",
    "web-tree-sitter"
  ],
  "overrides": {
    "@types/bun": "catalog:",
    "@types/node": "catalog:"
  }
}
